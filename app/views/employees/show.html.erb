<h1><%= @employee.name %></h1>
<b><%= @employee.dept_name %></b> <br>
<% @employee.tickets.each do |tick| %>
  <div id="tick-<%= tick.id %>">
    <p> Ticket Issue: <%= tick.subject %></p>
    <p><%= tick.age %> months since first issued</p>
  </div>
<% end %>

<%= form_with url: "/employees/#{@employee.id}", method: :patch, local: true do |f| %>
  <%= f.label :ticket_number %>
  <%= f.number_field :ticket_number %>
  <%= f.submit "Submit" %>
<% end %>